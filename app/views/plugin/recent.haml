%div{ :style=>"text-align:center; margin-bottom:5px;" }
  = link_to 'all links &rarr;', "#{Page.host}/links", :class=>'btn btn-sm'

- for link in (@links=Link.desc.my.paginate(20))
  %a{ :href=>link.url, :style=>"display:block; position:relative;" }
    %div{ :style=>"padding:6px; text-shadow:0 0 4px #222; background:rgba(1, 1, 1, 0.5); position:absolute; width:100%;" }
      %p{ :style=>"color:#fff; " }= link.name
      %p{ :style=>"color:#fff; font-size:80%;" }= Time.ago(link.created_at)
    = image_tag link.thumbnail, :style=>"width:100%; margin-bottom:20px; border:1px solid #aaa;"

= paginate @links
