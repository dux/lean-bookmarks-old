= render :_menu

.nudge
  
  %h3= @link.name

  %p
    %b= link_to @link.url
  %p{ :style=>"margin-top:5px;" }
    = image_tag @link.ico, :style=>'width:16px; height:16px; margin-top:5px; position:relative; top:4px;'
    %a{ :href=>"/domain/#{@link.domain}", :style=>"text-decoration:none; color:#222;" }= @link.domain
  
  %hr

%br

.row
  .col-1
    %a{ :href=>@link.url }= image_tag @link.thumbnail, :style=>"max-width:100%; border:1px solid #ccc;"
  .col-1
    = input :asda, :collection=>Bucket.can, :value=>@link.bucket_id, :onchange=>"Api.send('links/#{@link.id}/update', { bucket_id:this.value })", :style=>"display:inline;"
    %br
    %br
    = render 'main/_tags', :object=>@link

    #link_desc
      - if @link.description?
        %hr
        .w.markdown= @link.description

    %hr

    %button#link_button.btn.btn-primary{ :onclick=>"$(this).hide(); $('#link_desc').hide(); $('#link_edit').show();" } Edit link details
    #link_edit.hidden
      - if @link.active
        %button.btn.btn-error.btn-sm.fr{ :onclick=>"delete_object('links', #{@link.id})" } Delete
      - else
        %button.btn.btn-sm.fr{ :onclick=>"restore_object('links', #{@link.id})" } Restore from archive

      = form @link, :ver do
        = input :name
        = input :url
        = input :is_article
        = input :description, :as=>:memo, :style=>"height:200px;"
        = submit 'Save' do
          or <a onclick="$('#link_desc').show(); $('#link_edit').hide(); $('#link_button').show();">cancel</a>
    
