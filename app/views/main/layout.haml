!!!
%html{:lang => "en"}
  %head
    %title StashBuckets
    = Asset.jquery 
    = Asset.css 'main/index.scss'
    = Asset.css 'http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,700,300,600'
    = Asset.js  'main/index.coffee'
  %body{ :class=>@class  }
    #full-page
      .colorize
        - if @class
          %div{ :class=>@class }
        - else
          .buckets
          .links
          .notes

      .navbar
        .container
          %ul.main
            = main_menu
            %li
          %ul.pull-right= sub_menu

      - if @top_info
        .top-info{ :style=>"background-color:#FBB; padding:10px 0; margin-top:-20px; color:#555;" }
          .container= @top_info

      .container#content
        = yield

        = base_js
