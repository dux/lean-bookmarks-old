.bucket.default{ :href=>@onclick ? nil: @bucket.path, :onclick=>@onclick ? "(#{@onclick})(#{@bucket.id})" : nil }
  %h4= @bucket.name

  %small= @bucket.desc

  %br

  - if @bucket.image?
    = image_tag @bucket.image, :style=>"float:right; width:100%; max-height:220px; margin:10px 0 -200px 0; "

  %br

  - for el in @bucket.tags
    %a.label.label-default{ :href=>"/buckets:#{el}" }= el
