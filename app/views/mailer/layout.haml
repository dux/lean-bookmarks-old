!!! html
%html
  %head
    %title= App.name
  %body{ :style=>"background-color:#eee;" }
    %table{ :style=>"width:100%; height:100%; border-collapse:collapse; background-color:#eee; table-layout:fixed; padding:0; margin:0; line-height:16pt; font-family:arial;"}
      %tr
        %td
        %td{ :style=>"text-align:center; width:600px; margin-top:40px;" }
          %br
          &nbsp;
          %br
          %a{ :href=>Lux.host }= image_tag "#{Lux.host}/favicon.ico", :width=>60, :height=>60
          %br
          %br
        %td
      %tr
        %td
        %td
          #content{ :style=>"padding:20px 20px 20px; background-color:#fff; border:1px solid #ddd; border-radius:5px; min-height:500px; max-width:600px; font-size:11pt;"  }
            %h2{ :style=>"text-align:center;" }= App.name
            %br
            = yield.gsub(/\shref="\//,%[ href="#{Lux.host}/]).gsub(/\ssrc="\//,%[ src="#{Lux.host}/]).html_safe
        %td
      %tr
        %td
        %td{ :style=>"color:#aaa; text-align:right;"}
          %br
          = link_to 'Unsubscribe', "#{Lux.host}/action/unsubscribe?data=#{Crypt.encrypt(@to)}", :style=>"color:#aaa;"
          %br
          %br
          %br
          %br
        %td

